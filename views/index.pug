include ./main
  body
  .container-fluid  
    .row.justify-content-center.text-center
      button.btn.btn-success.my-2.mx-1( type="button"  onclick='showForeman()') Обновить список 
      form.form-inline( action="/search")
         input#searchInput.form-control.ml-2(type='search' name="search" placeholder='Поиск' aria-label='Search')
         button#searchButton.btn.btn-success.my-2.mx-1 Искать
         a.btn.btn-primary.my-2(href='/') Сбросить
       
    table.table.table-bordered
      thead.thead-dark
        tr.text-center
          th.align-top(scope='col') Фамилия               
          th.align-top(scope='col') Имя            
          th.align-top(scope='col') Отчество
          th.align-top(scope='col') Дата приема на работу
          th.align-top(scope='col') Дата увольнения
          th.align-top(scope='col') Количество рабочих дней <br>(без выходных)
          th.align-top(scope='col') Слетов
          th.align-top(scope='col') Успешных объектов
          th.align-top(scope='col') Всего объектов
          th.align-top(scope='col') % Слетов
          th.align-top(scope='col') Дата загрузки информации
      for item in list
       tbody
        tr.text-center
          th(scope="row")= item.surname         
          th= item.name                         
          th= item.patronymic                   
          td= item.employment_date             
          td= item.date_of_dismissal           
          td= item.number_of_working_days    
          td= item.number_of_meetings           
          td= item.the_number_of_successful_objects   
          td= item.total_objects
          td= item.rates_percent
          td= item.information_upload_date
      
    script(src="script.js")
